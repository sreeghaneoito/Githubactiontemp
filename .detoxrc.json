{
  "testRunner": "jest",
  "runnerConfig": "e2e/config.json",
  "devices": {
    "emulator": {
      "type": "android.emulator",
      "device": {
        "avdName": "Pixel_4_API_30"
      }
    }
  },
  "apps": {
    "android.emu.debug": {
      "type": "android.apk",
      "binaryPath": "application/app-release.apk",
      "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd .."
    },
    "android.emu.release": {
      "type": "android.apk",
      "binaryPath": "application/app-release.apk",
      "build": "cd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && cd .."
    },
    "chrome": {
      "type": "android.apk",
      "binaryPath": "/apps/chrome.apk",
      "packageName": "com.android.chrome"
    }
  },
  "configurations": {
    "android.emu.debug": {
      "type": "android.emulator",
      "name":"emu",
      "binaryPath": "application/app-release.apk",
      "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd .."
    },
    "android.emu.release": {
      "type": "android.emulator",
      "name":"emu",
      "binaryPath": "app/app-release.apk",
      "build": "cd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && cd .."
    }
  }
}